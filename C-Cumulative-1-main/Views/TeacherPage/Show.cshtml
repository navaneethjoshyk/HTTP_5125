@model List<School.Models.Teacher>

@{
    ViewData["Title"] = "All Teachers";
}

<h1 style="color: green;"> Razor View Loaded Successfully</h1>
<h2>All Teachers</h2>

<table border="1" cellpadding="10">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Hire Date</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherId</td>
                <td>@teacher.TeacherFName</td>
                <td>@teacher.TeacherLName</td>
                <td>@teacher.HireDate.ToShortDateString()</td>
                <td>@teacher.Salary.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
   